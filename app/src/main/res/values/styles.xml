<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00AFDB</item>
        <item name="colorPrimaryDark">#333</item>
        <item name="colorAccent">#ECECEC</item>
    </style>

    <style name="TitleStyle" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="BeerTitleStyle" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="TaglineStyle" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="AbvStyle" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

</resources>